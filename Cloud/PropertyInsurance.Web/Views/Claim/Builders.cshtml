@{
    ViewBag.Title = "Builders";
    var builderList = ViewBag.BuilderList;
}
@section styles {
    @Styles.Render("~/Content/builders")
}
@section navbar
{
    <span>Builders</span>
}
<div class="leftMenu">
    <ul>
        <li class="hamburger"><img class="menu-icon" src="~/Content/images/navbar/Hamburger.png" /></li>
    </ul>
    <ul class="menu-nav">
        <li class="dashboard">Dashboard</li>
        <li class="claims">Claims</li>
        <li class="builders with-img menu-selected"><img src="~/Content/images/navbar/builders-selected.png" />Builders</li>
        <li class="help with-img"><img src="~/Content/images/navbar/help.png" />Help</li>
        <li class="new with-img"><img src="~/Content/images/navbar/new.png" />New view</li>
    </ul>
</div>
<div class="content-main common-list builder-list">
    <div class="content-operation-area padding-left">
        <div class="operation-tree">
            <span>All builders</span>
            <span>Preferred</span>
            <span>High risk</span>
        </div>
        <div class="operation-container">
            <div class="col-1">
                <input type="text" value="Search..." />
            </div>
            <div class="col-2">
                <div  class="listview"><img src="~/Content/images/List.png" /><span>List view</span></div>
                <div><img src="~/Content/images/Grid.png" /><span>Grid view</span></div>
                <div><img src="~/Content/images/Filter.png" /><span>Filter</span><img src="~/Content/images/Down.png" /></div>
                <div><img src="~/Content/images/Add.png" /><span>Create</span><img src="~/Content/images/Down.png" /></div>
                <div class="count"><span>@builderList.Count</span><span> items</span></div>
            </div>
        </div>
    </div>
    <div class="content-core padding-left">
        <div class="content-core-left">
            <div class="content-claim-history">
                <div class="history-grid">
                    <table cellspacing="0">
                        <thead>
                            <tr>
                                <th class="col-1">Name<img src="~/Content/images/Up.png" /></th>
                                <th class="col-2">Total Properties</th>
                                <th class="col-3">Total Claims</th>
                                <th class="col-4">% Claims</th>
                                <th class="col-5">Risk</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in builderList)
                            {
                                <tr class="history-tr">
                                    <td>@item.Name</td>
                                    <td>@item.TotalNoProperties</td>
                                    <td>@item.TotalClaims</td>
                                    <td>@item.PercentClaims%</td>
                                    <td class="context-menu-fire builder @PropertyInsurance.Web.Utils.ClaimUtil.GetBuilderHighRiskTdCssClass(item)"><span>@item.Risk.ToString()</span><img src="~/Content/images/High-Risk-Mark.svg" /></td>
                                    @*<td><span class="context-menu-fire builder"><img src="~/Content/images/Contoso-Insurance-Misc-Icons-ELLIPSIS.svg" /></span></td>*@
                                </tr>
                            }
                            <tr class="newclaim-tr">
                                <td><img src="~/Content/images/Add.png" /><span>Add item</span></td>
                                <td></td><td></td><td></td><td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<footer>
    Developed by Microsoft for demonstration and education purposes only.
</footer>
@section scripts {
    @Scripts.Render("~/bundles/claim")
}
